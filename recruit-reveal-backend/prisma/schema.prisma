     generator client {
       provider = "prisma-client-js"
     }

     datasource db {
       provider = "postgresql"
       url      = env("PG_URL")
     }

     model User {
       id              Int      @id @default(autoincrement())
       email           String   @unique
       password_hash   String
       createdAt       DateTime @default(now())
       updatedAt       DateTime @updatedAt
       evals           Eval[]   // Relation to evaluations
       
       // Profile fields
       name            String?
       position        String?  // QB, WR, RB, DB, LB, TE
       graduation_year Int?
       state           String?
       height          Int?     // Height in inches
       weight          Int?     // Weight in pounds
       profile_photo_url String?
       video_links     String[] // Array of video URLs (YouTube, Hudl)
       privacy_setting String   @default("public") // "public" or "private"
       email_notifications Boolean @default(true)
       profile_complete Boolean @default(false)
     }

     model Eval {
       id                   Int      @id @default(autoincrement())
       user                 User?    @relation(fields: [user_id], references: [id])
       user_id              Int?     // Link to user ID
       player_name          String
       position             String   // QB, RB, etc.
       score                Float
       division             String
       notes                String?
       eval_date            DateTime @default(now())
       probability          Float?
       performance_score    Float?
       combine_score        Float?
       upside_score         Float?
       underdog_bonus       Float?
       goals                String[] // Array of goals
       switches             String?
       calendar_advice      String?
       what_if_results      String?  // JSON string of What If simulation results
       progress_results     String?  // JSON string of Division Progress results
     }
