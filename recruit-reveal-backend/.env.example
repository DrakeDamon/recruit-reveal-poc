# Database
PG_URL=postgresql://username:password@localhost:5432/recruit_reveal

# Azure Synapse Configuration (for production)
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_SYNAPSE_WORKSPACE=your-synapse-workspace
AZURE_PIPELINE_NAME=your-pipeline-name
AZURE_NOTEBOOK_NAME=your-notebook-name

# Databricks Model Serving Endpoints (for What-If predictions)
DATABRICKS_HOST=https://your-workspace.azuredatabricks.net
DATABRICKS_MODEL_QB_URL=https://your-workspace.azuredatabricks.net/serving-endpoints/your-qb-endpoint/invocations
DATABRICKS_MODEL_RB_URL=https://your-workspace.azuredatabricks.net/serving-endpoints/your-rb-endpoint/invocations
DATABRICKS_MODEL_WR_URL=https://your-workspace.azuredatabricks.net/serving-endpoints/your-wr-endpoint/invocations
DATABRICKS_TOKEN=your-databricks-personal-access-token

# Mock Mode (set to true for development/testing)
MOCK_SYNAPSE=true

# Server Configuration
PORT=3001
NODE_ENV=development